<Window x:Class="Minesweeper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Minesweeper"
        mc:Ignorable="d"
        Title="MainWindow" Height="310" Width="260"
        x:Name="window">
    <Grid>
        <Button Content="Difficulty" HorizontalAlignment="Left" Margin="20,10,0,0" VerticalAlignment="Top" Click="Difficulty_Click" Width="60"/>
        <Button Content="Size" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Click="Size_Click" Width="60" x:Name="size"/>
        <Button Content="Reset" HorizontalAlignment="Right" Margin="0,10,20,0" VerticalAlignment="Top" Click="Reset_Click" Width="60"/>
        <Grid Margin="0,40,0,20" Height="240" Width="240" VerticalAlignment="Top" HorizontalAlignment="Center" x:Name="gamegrid">

        </Grid>
    </Grid>
</Window>
